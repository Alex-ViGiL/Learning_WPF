        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions >
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <StackPanel Grid.Column="0" >
            <Button Content="23" Height="44" Visibility="Collapsed" />
            <Button Content="23" Height="44" Visibility="Visible" />
        </StackPanel>

        <StackPanel Grid.Column="1" >

            <Button Height="44" Content="333" Visibility="Hidden" />
            <Button Height="77" Visibility="Visible"  Content="Press" FontSize="44" FontWeight="ExtraBlack" FontStyle="Italic" FontStretch="UltraExpanded" Cursor="Cross" />
