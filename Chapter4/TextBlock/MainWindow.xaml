<Window x:Class="TextBlock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextBlock"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <StackPanel>
            <TextBlock>
               
                <Run TextDecorations="Underline" > ggg</Run>
                
            </TextBlock>

            <TextBox Name="a" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" SpellCheck.IsEnabled="True" Width="222" MaxLength="20" ToolTip="MaxLenght = 20"   Language="ru-ru" />
            <Label  Target="{Binding ElementName=pass}" Content="_h_ey" />
            <PasswordBox x:Name="pass" PasswordChar="0" />
            <TextBlock/>
        </StackPanel>
        
    </Grid>
</Window>
